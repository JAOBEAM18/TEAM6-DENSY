generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int      @id @default(autoincrement())
  username   String   @unique
  email      String   @unique
  password   String
  role       Role
  department String?
  created_at DateTime @default(now())

  preset       Preset[]
  updateChecklist    Checklist[]        @relation("user")
  comment      Comment[]
  patrol       User_Has_Patrol[]
  profile      Profile[]
  notification Notification[]
  defect       Defect[]
  zone        Zone[]
  checklist   Patrol_Has_Checklist [] 
  @@map("users")
}

model Defect {
  id        Int      @id @default(autoincrement())
  title     String
  note      String
  type      String
  status    Defect_Status
  timestamp DateTime @default(now())

  users_id      Int
  user          User            @relation(fields: [users_id], references: [id])
  patrol_result Patrol_Result[]
  image         Image[]
  @@map("defects")
}

model Notification {
  id        Int      @id @default(autoincrement())
  message   String
  status    Boolean
  timestamp DateTime @default(now())

  users_id Int
  user     User @relation(fields: [users_id], references: [id])
  @@map("notifications")
}

model Profile {
  id      Int     @id @default(autoincrement())
  name    String?
  age     Int?
  tel     String?
  address String?

  users_id Int
  user     User @relation(fields: [users_id], references: [id])
  @@map("profiles")
}


model User_Has_Patrol {
  users_id   Int
  user       User   @relation(fields: [users_id], references: [id])
  patrols_id Int
  patrol     Patrol @relation(fields: [patrols_id], references: [id])

  @@id([users_id, patrols_id])
  @@map("users_has_patrols")
}

model Patrol {
  id         Int      @id @default(autoincrement())
  date       DateTime
  start_time DateTime?
  end_time   DateTime?
  duration   String?
  status     Patrol_Status
  checklist   Patrol_Has_Checklist[]
  user          User_Has_Patrol[]
  presets_id    Int
  preset        Preset             @relation(fields: [presets_id], references: [id])
  patrol_result Patrol_Result[]
  @@map("patrols")
}

model Patrol_Has_Checklist {
  id           Int      @id @default(autoincrement())
  patrolId     Int
  checklistId  Int
  inspectorId  Int

  patrol       Patrol    @relation(fields: [patrolId], references: [id])
  checklist    Checklist @relation(fields: [checklistId], references: [id])
  inspector    User      @relation(fields: [inspectorId], references: [id])

  @@map("patrol_has_checklist")
  @@index([patrolId, checklistId, inspectorId])
}

model Preset {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  version     Int
  lasted     Boolean
  updateAt    DateTime

  updateBy  Int
  user      User                    @relation(fields: [updateBy], references: [id])
  checklist Preset_Has_Checklist[]
  patrol    Patrol[]
  @@map("presets")
}


model Preset_Has_Checklist {
  presets_id    Int
  preset        Preset    @relation(fields: [presets_id], references: [id])
  checklists_id Int
  checklist     Checklist @relation(fields: [checklists_id], references: [id])

  @@id([presets_id, checklists_id])
  @@map("presets_has_checklists")
}

model Checklist {
  id       Int      @id @default(autoincrement())
  title    String
  version  Int
  lasted  Boolean
  updateAt DateTime @default(now())
  patrol  Patrol_Has_Checklist[]
  updateByUserId    Int
  updateBy        User                    @relation("user", fields: [updateByUserId], references: [id])
  preset      Preset_Has_Checklist[]
  item        Item[]
  @@map("checklists")
}

model Patrol_Result {
  id     Int     @id @default(autoincrement())
  status Boolean

  items_id   Int
  item       Item      @relation(fields: [items_id], references: [id])
  comment    Comment[]
  defects_id Int
  defect     Defect    @relation(fields: [defects_id], references: [id])
  patrols_id Int
  patrol     Patrol    @relation(fields: [patrols_id], references: [id])
  @@map("patrol_results")
}

model Item {
  id   Int    @id @default(autoincrement())
  name String
  type Item_Status

  checklists_id Int
  checklist     Checklist       @relation(fields: [checklists_id], references: [id])
  zones_id      Int
  zone          Zone            @relation(fields: [zones_id], references: [id])
  patrol_result Patrol_Result[]
  @@map("items")
}

model Zone {
  id   Int    @id @default(autoincrement())
  name String

  item         Item[]
  locations_id Int
  location     Location @relation(fields: [locations_id], references: [id])
  responsible_man_id  Int
  user         User   @relation(fields: [responsible_man_id], references: [id])
  @@map("zones")
}

model Location {
  id   Int    @id @default(autoincrement())
  name String

  zone Zone[]
  @@map("locations")
}

model Comment {
  id        Int      @id @default(autoincrement())
  message   String
  timestamp DateTime @default(now())

  users_id          Int
  user              User         @relation(fields: [users_id], references: [id])
  patrol_results_id Int
  patrol_result     Patrol_Result @relation(fields: [patrol_results_id], references: [id])
  @@map("comments")
}

model Image {
  id        Int      @id @default(autoincrement())
  path      String
  timestamp DateTime @default(now())

  defects_id Int
  defect     Defect @relation(fields: [defects_id], references: [id])
  @@map("images")
}

enum Role {
  ADMIN
  INSPECTOR
  RESPONSIBLEMAN
  OFFICER
}

enum Patrol_Status {
  Pending
  Scheduled
  OnGoing
  Completed
}

enum Defect_Status {
  Reported 
  InProgress
  PendingInspection
  Resolved
  Completed
}

enum Item_Status {
  Safety
  Environment
  Maintenance
}